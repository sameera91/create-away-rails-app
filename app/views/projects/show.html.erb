<%= flash[:success] if flash[:success] %><br>

<h1><%= @project.title %></h1>

<p>Name: <%= @project.title %></p>
<p>Description: <%= @project.long_description %></p>

<p>Categories:</p>
<% @project.categories.each do |category| %>
  <p><%= category.name %></p>
<%end%>

<p>Number of likes:</p>
<%= @project.likes %>
<br><br><br>
<p id="comments">Comments:</p>

<% @project.comments.each do |comment| %>
  <%= comment.content %><br>
<%end%>
<br>

<%= link_to "Edit post", edit_project_path(@project) %><br>
<%= link_to 'Delete post',  user_project_path(current_user, @project),
    data: { confirm: 'Are you sure?' }, method: :delete %><br>
<% if current_user && !current_user.projects.include?(@project) %>
  <%= link_to "Like", edit_project_path(@project) %><br>
<%end%>

<% if current_user %>
  <%= link_to "Post a comment", new_project_comment_path(@project) %>
<% else %>
  <%= link_to "Sign in", user_session_path %> to like or post a comment!
<%end%>
