  $(".comments").click(function(event){

    event.preventDefault();

    var projectUrl = event["target"]["href"];

    $.get(projectUrl + ".json", function(data) {


      data["comments"].forEach(function(object){
        if($("#new_comment").val().indexOf(object.content) === -1){
          $("#new_comment").append('</br>' + object.content + '</br>');

        }
      });

    });

  });

  $(".post_comment").click(function(event){
    $("#form").show();
  });
});


